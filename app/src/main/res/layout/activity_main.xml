<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        />

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/progress_bar_init"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        app:cpv_animAutostart="true"
        app:cpv_color="@color/sesc_primary"
        app:cpv_indeterminate="true" />

    <TextView
        android:id="@+id/item_farmacia_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="10sp"
        android:text="Funcionamento:"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/tb_main"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp" />

    <TextView
    android:id="@+id/item_farmacia_text_horarios"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
        android:textColor="#000000"
    android:textSize="10sp"
    android:text="Seg a sex: 08h00 às 18h00. Sábados: 08h00 às 12h00"
    android:gravity="center"
    android:textAlignment="center"
        android:layout_alignBottom="@+id/item_farmacia_text_name"
        android:layout_toRightOf="@+id/item_farmacia_text_name"
        android:layout_toEndOf="@+id/item_farmacia_text_name" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recycler_farmacias"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_main"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        />

</RelativeLayout>