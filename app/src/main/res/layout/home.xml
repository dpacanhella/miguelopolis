<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c4c4c4"
    tools:context=".FarmaciaActivity"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:layout_alignParentRight="true"
        android:foregroundGravity="right"
        android:layout_gravity="right"
        android:minHeight="?attr/actionBarSize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tb_main"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.22"
            android:background="#fff">

            <Button
                android:id="@+id/btnFarmacias"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:background="@drawable/new_button_farmacia"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:text="Farmácias"
                android:textColor="#565656"
                android:textSize="16sp"
                 />

            <Button
                android:id="@+id/btnHorariosOnibus"
                android:layout_marginTop="20dp"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/new_button_onibus"
                android:textStyle="bold"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="68dp"
                android:layout_marginRight="68dp"
                android:text="Ônibus"
                android:textColor="#565656"
                android:textSize="16sp"
                 />

        </RelativeLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:text="Novidades"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#565656"
        android:paddingRight="14dp"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:textAppearance="@string/faw_align_justify"
        android:text=" - O Aplicativo foi atualizado e agora contém um menu lateral que se encontra no canto superior esquerdo. "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#565656"
            android:paddingLeft="16dp"
            android:paddingRight="14dp"
            android:textSize="16sp"
            android:textAppearance="@string/faw_align_justify"
            android:text=" - Também foi adicionado horários de ônibus da região. "/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingRight="16dp"
            android:text="Próximas versões"
            android:paddingLeft="16dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#565656"
            android:paddingLeft="16dp"
            android:paddingRight="14dp"
            android:textSize="16sp"
            android:text=" - Serão incluídos, bares/restaurantes, lanchonetes, disk-gás, chaveiros entre outros. "/>

    </LinearLayout>

</LinearLayout>

