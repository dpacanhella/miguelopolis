<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="20dp">

        <ImageView
            android:id="@id/item_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="6dp" />

        <TextView
            android:id="@+id/item_farmacia_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/item_image_view"
            android:layout_toRightOf="@+id/item_image_view"
            android:paddingRight="16dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_farmacia_text_nomeProprietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_image_view"
            android:layout_alignLeft="@+id/item_farmacia_text_name"
            android:layout_alignStart="@+id/item_farmacia_text_name"
            android:paddingRight="16dp"
            android:textColor="#000000"
            android:textSize="12sp" />

        <View
            android:id="@+id/vw.divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/item_farmacia_text_nomeProprietario"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:layout_alignLeft="@+id/item_farmacia_text_nomeProprietario"/>

</RelativeLayout>