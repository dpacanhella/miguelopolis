<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="10dp">

        <TextView
            android:id="@+id/item_farmacia_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:paddingRight="16dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_farmacia_text_nomeProprietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_below="@+id/item_farmacia_text_name"
            android:layout_alignLeft="@+id/item_farmacia_text_name"
            android:layout_alignStart="@+id/item_farmacia_text_name" />

        <TextView
            android:id="@+id/item_farmacia_text_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_below="@+id/item_farmacia_text_nomeProprietario"
            android:layout_alignLeft="@+id/item_farmacia_text_nomeProprietario"
            android:layout_alignStart="@+id/item_farmacia_text_nomeProprietario" />

        <View
            android:id="@+id/vw.divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item_farmacia_text_nomeProprietario"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:layout_alignLeft="@+id/item_farmacia_text_nomeProprietario"/>

</RelativeLayout>