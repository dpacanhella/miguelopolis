<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingTop="10dp"
    android:background="#fff">


    <TextView
        android:id="@+id/item_promocao_valor_inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_above="@+id/txtLblPreco"
        android:layout_below="@+id/item_promocao_nome" />


    <TextView
        android:id="@+id/item_promocao_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtLblPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textAlignment="center"
        android:textColor="#ff6124"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="PreÃ§o promocional:"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:id="@+id/item_promocao_valor_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textAlignment="center"
        android:textColor="#ff6124"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/txtLblPreco"
        android:layout_toRightOf="@+id/txtLblPreco"
        android:layout_toEndOf="@+id/txtLblPreco" />

    <View
        android:id="@+id/vw.divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_promocao_nome"
        android:layout_marginTop="60dp"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:paddingRight="16dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/certo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>