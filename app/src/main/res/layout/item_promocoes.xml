<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/item_promocao_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:id="@+id/item_promocao_valor_inicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_below="@+id/item_promocao_nome"
            android:layout_alignLeft="@+id/item_promocao_nome"
            android:layout_alignStart="@+id/item_promocao_nome" />


        <TextView
            android:id="@+id/item_promocao_valor_final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_below="@+id/item_promocao_valor_inicial"
            android:layout_alignLeft="@+id/item_promocao_valor_inicial"
            android:layout_alignStart="@+id/item_promocao_valor_inicial" />

        <View
            android:id="@+id/vw.divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item_promocao_nome"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingRight="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@mipmap/certo"
            android:layout_alignBottom="@+id/item_promocao_valor_final" />

</RelativeLayout>